<h1>Editing project</h1>

<%= error_messages_for :project %>
<% form_for(@project) do |f| %>
  <p>
    <label for="name">Project Name</label><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <label for="launch_date">Launch Date</label><br />
    <%= f.date_select :launch_date %>
  </p>
  <p>
    <label for="status">Status of the project</label><br />
    <%= f.select 'status_id', Status.to_select("for='project'") %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>