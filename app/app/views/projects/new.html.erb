<h1>New project</h1>
<%= error_messages_for :project %>
<% form_for(@project) do |f| %>
  <p>
    <label for="name">Project Name:</label><br /><%= f.text_field :name %>
  </p>
  <p>
    <label for="company_id">Company:</label><br /><%= f.select :company_id, Company.to_select %>
  </p>
  <p>
    <label for="status_id">Status:</label><br /><%= f.select :status_id, Status.to_select %>
  </p>
  <p>
    <label for="launch_date">Preliminary launch date:</label><br /><%= f.date_select :launch_date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>
